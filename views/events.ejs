<%- include('partials/header') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Events</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEventModal">
            <i class="bi bi-plus-circle"></i> Add Event
        </button>
    </div>

    <div class="row">
        <% if (events.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No events scheduled yet. Be the first to create one!
                </div>
            </div>
        <% } else { %>
            <% events.forEach(event => { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 <%= new Date(event.date) >= new Date() ? 'border-success' : 'border-secondary' %>">
                        <div class="card-header <%= new Date(event.date) >= new Date() ? 'bg-success text-white' : 'bg-secondary text-white' %>">
                            <h5 class="mb-0"><%= event.title %></h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><%= event.description %></p>
                            <hr>
                            <p class="mb-2">
                                <i class="bi bi-calendar3"></i> <strong>Date:</strong> 
                                <%= new Date(event.date).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-geo-alt-fill"></i> <strong>Location:</strong> <%= event.location %>
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-person-fill"></i> <strong>Organized by:</strong> <%= event.organizer %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                Created <%= new Date(event.createdAt).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<!-- Add Event Modal -->
<div class="modal fade" id="addEventModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/events" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="title" class="form-label">Event Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="date" class="form-label">Date</label>
                        <input type="datetime-local" class="form-control" id="date" name="date" required>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="location" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Event</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
