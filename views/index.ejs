<%- include('partials/header') %>

<!-- Enhanced Hero Section with Background Slider -->
<div class="hero-section text-white py-5 position-relative overflow-hidden">
    <!-- Background Image Slider -->
    <div class="hero-slider">
        <div class="hero-slide active" style="background-image: url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=1200&q=80');"></div>
        <div class="hero-slide" style="background-image: url('https://images.unsplash.com/photo-1541339907198-e08756dedf3f?w=1200&q=80');"></div>
        <div class="hero-slide" style="background-image: url('https://images.unsplash.com/photo-1562774053-701939374585?w=1200&q=80');"></div>
    </div>

    <!-- Dark Overlay -->
    <div class="hero-overlay"></div>

    <!-- Hero Content -->
    <div class="container position-relative" style="z-index: 2;">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-3 fw-bold mb-4 hero-title">Welcome to Alumni Portal</h1>
                <p class="lead mb-4 fs-4">Connect with fellow alumni, discover opportunities, and stay updated with the latest news and events from our community.</p>
                <% if (!user) { %>
                    <a href="/register" class="btn btn-light btn-lg me-2 px-4 py-3">Join Now</a>
                    <a href="/login" class="btn btn-outline-light btn-lg px-4 py-3">Login</a>
                <% } else { %>
                    <a href="/dashboard" class="btn btn-light btn-lg px-4 py-3">Go to Dashboard</a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <i class="bi bi-chevron-down"></i>
    </div>
</div>

