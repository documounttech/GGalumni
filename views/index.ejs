<%- include('partials/header') %>

<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to Alumni Portal</h1>
                <p class="lead mb-4">Connect with fellow alumni, discover opportunities, and stay updated with the latest news and events from our community.</p>
                <% if (!user) { %>
                    <a href="/register" class="btn btn-light btn-lg me-2">Join Now</a>
                    <a href="/login" class="btn btn-outline-light btn-lg">Login</a>
                <% } else { %>
                    <a href="/dashboard" class="btn btn-light btn-lg">Go to Dashboard</a>
                <% } %>
            </div>
            <div class="col-md-6 text-center">
                <i class="bi bi-people-fill" style="font-size: 200px; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-md-3">
            <div class="feature-card p-4">
                <i class="bi bi-people feature-icon text-primary"></i>
                <h4 class="mt-3">Alumni Directory</h4>
                <p>Search and connect with alumni from different batches and departments.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="feature-card p-4">
                <i class="bi bi-calendar-event feature-icon text-success"></i>
                <h4 class="mt-3">Events</h4>
                <p>Stay updated with reunions, seminars, and networking events.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="feature-card p-4">
                <i class="bi bi-briefcase feature-icon text-warning"></i>
                <h4 class="mt-3">Job Opportunities</h4>
                <p>Explore career opportunities posted by fellow alumni.</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="feature-card p-4">
                <i class="bi bi-newspaper feature-icon text-danger"></i>
                <h4 class="mt-3">News & Updates</h4>
                <p>Get the latest news and achievements from our community.</p>
            </div>
        </div>
    </div>

    <% if (news.length > 0) { %>
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">Latest News</h2>
        </div>
        <% news.forEach(item => { %>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2"><%= item.category %></span>
                        <h5 class="card-title"><%= item.title %></h5>
                        <p class="card-text"><%= item.content.substring(0, 100) %>...</p>
                        <small class="text-muted">By <%= item.author %></small>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <% } %>

    <% if (events.length > 0) { %>
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Upcoming Events</h2>
        </div>
        <% events.forEach(event => { %>
            <div class="col-md-4 mb-3">
                <div class="card h-100 border-primary">
                    <div class="card-body">
                        <h5 class="card-title"><%= event.title %></h5>
                        <p class="card-text"><%= event.description %></p>
                        <p class="mb-1"><i class="bi bi-calendar3"></i> <%= new Date(event.date).toLocaleDateString() %></p>
                        <p class="mb-1"><i class="bi bi-geo-alt"></i> <%= event.location %></p>
                        <small class="text-muted">Organized by <%= event.organizer %></small>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <% } %>
</div>

<%- include('partials/footer') %>
