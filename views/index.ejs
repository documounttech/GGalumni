<%- include('partials/header') %>

    <div id="heroCarousel" class="carousel slide hero-section" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://placehold.co/1920x600/0d6efd/ffffff?text=Welcome+to+Alumni+Portal"
                    class="d-block w-100" alt="Welcome">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4 fw-bold">Welcome to Alumni Portal</h1>
                    <p class="lead">Connect with fellow alumni, discover opportunities, and stay updated.</p>
                    <% if (!user) { %>
                        <a href="/register" class="btn btn-light btn-lg me-2">Join Now</a>
                        <a href="/login" class="btn btn-outline-light btn-lg">Login</a>
                        <% } else { %>
                            <a href="/dashboard" class="btn btn-light btn-lg">Go to Dashboard</a>
                            <% } %>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/1920x600/198754/ffffff?text=Networking+Events" class="d-block w-100"
                    alt="Events">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4 fw-bold">Join Our Events</h1>
                    <p class="lead">Participate in reunions, seminars, and networking sessions.</p>
                    <a href="/events" class="btn btn-light btn-lg">View Events</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://placehold.co/1920x600/ffc107/000000?text=Career+Opportunities" class="d-block w-100"
                    alt="Jobs">
                <div class="carousel-caption d-none d-md-block text-dark">
                    <h1 class="display-4 fw-bold">Grow Your Career</h1>
                    <p class="lead">Find job opportunities and mentorship from alumni.</p>
                    <a href="/jobs" class="btn btn-dark btn-lg">Explore Jobs</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container my-5">
        <div class="row text-center mb-5">
            <div class="col-md-3">
                <div class="feature-card p-4">
                    <i class="bi bi-people feature-icon text-primary"></i>
                    <h4 class="mt-3">Alumni Directory</h4>
                    <p>Search and connect with alumni from different batches and departments.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card p-4">
                    <i class="bi bi-calendar-event feature-icon text-success"></i>
                    <h4 class="mt-3">Events</h4>
                    <p>Stay updated with reunions, seminars, and networking events.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card p-4">
                    <i class="bi bi-briefcase feature-icon text-warning"></i>
                    <h4 class="mt-3">Job Opportunities</h4>
                    <p>Explore career opportunities posted by fellow alumni.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card p-4">
                    <i class="bi bi-newspaper feature-icon text-danger"></i>
                    <h4 class="mt-3">News & Updates</h4>
                    <p>Get the latest news and achievements from our community.</p>
                </div>
            </div>
        </div>

        <% if (news.length> 0) { %>
            <div class="row mb-5">
                <div class="col-12">
                    <h2 class="mb-4">Latest News</h2>
                </div>
                <% news.forEach(item=> { %>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <span class="badge bg-primary mb-2">
                                    <%= item.category %>
                                </span>
                                <h5 class="card-title">
                                    <%= item.title %>
                                </h5>
                                <p class="card-text">
                                    <%= item.content.substring(0, 100) %>...
                                </p>
                                <small class="text-muted">By <%= item.author %></small>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <% } %>

                <% if (events.length> 0) { %>
                    <div class="row">
                        <div class="col-12">
                            <h2 class="mb-4">Upcoming Events</h2>
                        </div>
                        <% events.forEach(event=> { %>
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= event.title %>
                                        </h5>
                                        <p class="card-text">
                                            <%= event.description %>
                                        </p>
                                        <p class="mb-1"><i class="bi bi-calendar3"></i>
                                            <%= new Date(event.date).toLocaleDateString() %>
                                        </p>
                                        <p class="mb-1"><i class="bi bi-geo-alt"></i>
                                            <%= event.location %>
                                        </p>
                                        <small class="text-muted">Organized by <%= event.organizer %></small>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
    </div>

    <%- include('partials/footer') %>