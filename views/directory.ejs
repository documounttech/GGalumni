<%- include('partials/header') %>

<div class="container my-5">
    <h2 class="mb-4">Alumni Directory</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form action="/directory" method="GET" class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="search" placeholder="Search by name or company" value="<%= query.search || '' %>">
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="batch">
                        <option value="">All Batches</option>
                        <% for(let year = 2024; year >= 1980; year--) { %>
                            <option value="<%= year %>" <%= query.batch == year ? 'selected' : '' %>><%= year %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="department">
                        <option value="">All Departments</option>
                        <option value="Computer Science" <%= query.department === 'Computer Science' ? 'selected' : '' %>>Computer Science</option>
                        <option value="Electrical Engineering" <%= query.department === 'Electrical Engineering' ? 'selected' : '' %>>Electrical Engineering</option>
                        <option value="Mechanical Engineering" <%= query.department === 'Mechanical Engineering' ? 'selected' : '' %>>Mechanical Engineering</option>
                        <option value="Civil Engineering" <%= query.department === 'Civil Engineering' ? 'selected' : '' %>>Civil Engineering</option>
                        <option value="Business Administration" <%= query.department === 'Business Administration' ? 'selected' : '' %>>Business Administration</option>
                        <option value="Economics" <%= query.department === 'Economics' ? 'selected' : '' %>>Economics</option>
                        <option value="Arts & Humanities" <%= query.department === 'Arts & Humanities' ? 'selected' : '' %>>Arts & Humanities</option>
                        <option value="Medicine" <%= query.department === 'Medicine' ? 'selected' : '' %>>Medicine</option>
                        <option value="Law" <%= query.department === 'Law' ? 'selected' : '' %>>Law</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <% if (alumni.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No alumni found matching your criteria.
                </div>
            </div>
        <% } else { %>
            <% alumni.forEach(person => { %>
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex">
                                <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; font-size: 24px;">
                                    <%= person.name.charAt(0).toUpperCase() %>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1"><%= person.name %></h5>
                                    <p class="text-muted mb-1">
                                        <i class="bi bi-mortarboard"></i> <%= person.department %> | Batch <%= person.batch %>
                                    </p>
                                    <% if (person.company) { %>
                                        <p class="mb-1">
                                            <i class="bi bi-building"></i> <%= person.position %> at <%= person.company %>
                                        </p>
                                    <% } %>
                                    <% if (person.city) { %>
                                        <p class="mb-1">
                                            <i class="bi bi-geo-alt"></i> <%= person.city %>
                                        </p>
                                    <% } %>
                                    <a href="mailto:<%= person.email %>" class="btn btn-sm btn-outline-primary mt-2">
                                        <i class="bi bi-envelope"></i> Contact
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <% if (alumni.length > 0) { %>
        <div class="text-center mt-4">
            <p class="text-muted">Showing <%= alumni.length %> alumni</p>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
